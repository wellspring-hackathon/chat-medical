{
  "ts-node": {
      "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": "src",
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "forceConsistentCasingInFileNames": true,
      "paths": { "@/*": ["./src/*"] },
      // "types": ["jest"],
      // "noUnusedLocals": true
  },
  "include": ["./src/**/*.ts", "eslint.config.cjs", ".drizzle.config.ts",  "./src/tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}